page {
  height: 100%;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.container {
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #e5e5e5;
}

.shadowBox{
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #ccc;
}

.shadowBox .item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}
