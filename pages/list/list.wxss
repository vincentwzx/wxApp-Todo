.newTask {
  display: flex;
  align-items: center;
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  background-color: white;
  border: 1rpx solid #e0e0e0;
  padding: 20rpx;
}

.newTask .plus {
  width: 41rpx;
  height: 41rpx;
  margin-right: 20rpx;
}

.newTask .new-task {
  flex: 1;
  font-size: 28rpx;
}

.shadowBox .item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  z-index: 100;  
}

.shadowBox .item:last-child {
  border-bottom: 0;
}

.shadowBox .item .name {
  flex: 1;
  font-size: 30rpx;
  color: #444;
  margin-left:15rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
}

.shadowBox .item .completed {
  flex: 1;
  font-size: 30rpx;
  text-decoration: line-through;
  color: #888;
   margin-left:15rpx;
}

.shadowBox .item .checkbox {
  margin-right: 10rpx;
}

.shadowBox .item .remove {
  cursor: pointer;
}