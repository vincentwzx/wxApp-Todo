<view class="container">
  <view class="shadowBox" wx:if="{{tasks.length>0}}">
    <view class="item" wx:for= "{{tasks}}" bindtap="openTaskDetail" id ="{{item.task_id}}" bindtouchstart="touchS" bindtouchmove="touchM" bindtouchend="touchE" style="{{item.itemStyle}}">

      <image class="checkbox" mode="scaleToFill" src="{{item.completed?'../../images/done.png':'../../images/undone.png'}}" id ="{{item.task_id}}" catchtap="toggleCheck"/>
      <text id ="{{item.task_id}}" class="{{item.completed?'completed':'name'}}">{{item.taskContent}}</text>
      <icon class="remove" id ="{{item.task_id}}" type="clear" size="20" catchtap="deleteTask"></icon>
      <!--<view id ="{{item.task_id}}" bindtap = "delItem" class="innerDel">删除</view>-->
    </view> 
  </view>
</view>
<view class="newTask">
    <image class="plus" src="../../images/plus.png"/>
    <input class="new-task" value="{{input}}" placeholder="准备做什么？" bindinput="getInput" bindconfirm="saveNewTask" focus="{{focus}}"/>
</view>