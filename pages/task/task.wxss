.card {
    background-color: white;
    border-radius: 5px;
    margin: 20rpx;
}


.header {
    display: flex;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #e0e0e0;
}

.checkbox {
    margin-right: 10rpx;
    width: 40rpx;
    height: 40rpx;
}

.title {
    border-bottom:none;
    flex: 1;
    word-wrap:break-word;
    margin: 0rpx 15rpx;
    line-height: 40rpx;
    font-size: 15px;
}

.content {
    padding: 40rpx;
    margin-left:45rpx;
    font-size: 15px;
    color: gray;
}

.focusContent {
    padding: 40rpx;
    margin-left:45rpx;
    font-size: 15px;
    color: black;
}